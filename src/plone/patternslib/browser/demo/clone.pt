<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master">
<metal:styles fill-slot="style_slot">
  <link rel="stylesheet" type="text/css" href="++resource++patternslib.demo/localstyles.css" />
</metal:styles>

<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">
        <div tal:replace="structure provider:plone.abovecontenttitle" />
            <h1>Clone</h1>
            <p><a href="http://patternslib.com/clone/#documentation">Documentation</a></p>
            <form action="" novalidate>
              <h3>List of family members</h3>
                <div class="pat-clone" data-pat-clone="template: #clone-template; trigger-element: .clone-trigger; max: 5">
                    <!-- First visible instance -->
                    <fieldset class="clone horizontal">
                      <legend>Family member 1</legend>
                      <fieldset>
                        <label>Full name
                          <input name="name-1" size="20" type="text" placeholder="Name" required="required"/>
                        </label>
                        <label>Date of birth
                          <input name="date-1" type="text" placeholder="Enter date" />
                        </label>
                      </fieldset>
                      <button type="button" class="pat-button remove-clone icon-trash">Remove</button>
                    </fieldset>

                    <!-- Template for the clones, hidden -->
                    <fieldset id="clone-template" class="horizontal" hidden>
                      <legend>Family member #{1}</legend>
                      <fieldset>
                        <label>Full name
                          <input name="name-#{1}" size="20" type="text" placeholder="Name" required="required"/>
                        </label>
                        <label>Date of birth
                          <input name="date-#{1}" type="text" placeholder="Enter date" />
                        </label>
                      </fieldset>
                      <button type="button" class="pat-button remove-clone icon-trash">Remove</button>
                    </fieldset>
                </div>
                <!-- Clone trigger -->
                <button type="button" class="pat-button clone-trigger">Add an extra family member</button>
                <button class="pat-button" id="submit" type="submit">Submit</button>
            </form>
        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>
</body>
</html>
